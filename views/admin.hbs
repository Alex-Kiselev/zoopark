<script src="/js/admin.js"></script>
<div class="container-sm">
  <form>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Категория</label>
      <div class="input-group">
        <input type="text" class="form-control" id="inputCategory">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split"
          data-bs-toggle="dropdown" aria-expanded="false">
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">Another action</a></li>
          <li><a class="dropdown-item" href="#">Something else here</a></li>
          <li><a class="dropdown-item" href="#">Separated link</a></li>
        </ul>
      </div>
    </div>
    <div class="mb-3">
      <label class="form-label">Тип дня</label>
      <div class="input-group">
        <input type="text" class="form-control" aria-label="Text input with segmented dropdown button">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split"
          data-bs-toggle="dropdown" aria-expanded="false">
          <span class="visually-hidden">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu dropdown-menu-end">
          <li><a class="dropdown-item" href="#">Another action</a></li>
          <li><a class="dropdown-item" href="#">Something else here</a></li>
          <li><a class="dropdown-item" href="#">Separated link</a></li>
        </ul>
      </div>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">С даты</label>
      <input type="date" name="date" class="form-control" />
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Новый тариф</label>
      <input type="number" name="value" class="form-control" />
    </div>
    <div class="mb-3">
      <input type="button" class="btn btn-outline-success btn-sm" id="addrow" onclick="childrenRow()"
        value="Добавить" />
    </div>
  </form>
</div>
<div class="container-sm">
  <table class="table table-hover table-bordered border-dark" id="childTable">
    <thead>
      <tr>
        <th scope="id">#</th>
        <th scope="PeopleType.name">Категория людей</th>
        <th scope="DayType.name">Тип дня</th>
        <th scope="date">С даты</th>
        <th scope="value">Тариф</th>
        <th scope="Control">Инструменты</th>
      </tr>
    </thead>

    <tbody>
      {{#each tarifGrid}}
      <tr id="tbl{{id}}">
        <td scope="row">{{id}}</td>
        <td>
          <input type="text" name="PeopleType.name" class="form-control" value="{{'PeopleType.name'}}" />
        </td>
        <td>
          <input type="text" name="DayType.name" class="form-control" value="{{'DayType.name'}}" />
        </td>
        <td>{{date}}</td>
        <td>
          <input type="number" name="value" class="form-control" value="{{value}}" />
        </td>
        <td>
          <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
            <input type=" button" class="btn btn-outline-warning btn-sm" id="addrow" onclick="changeRow('tbl{{id}}')"
              value="Изменить" />
            <input type=" button" class="btn btn-outline-danger btn-sm" id="addrow" onclick="deleteRow('tbl{{id}}')"
              value="Удалить" />
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
